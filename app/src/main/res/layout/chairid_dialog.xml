<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.posturealert.smartchair.Dashboard">
    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/chair"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_text"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/dialog_text"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/dialog_text"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="255dp"
        android:layout_height="63dp"
        android:layout_alignBottom="@+id/dialog_image"
        android:layout_toRightOf="@+id/dialog_image"
        android:text="Enter the new chairID of the chair you wish to change to."
        tools:layout_editor_absoluteX="113dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/change_button"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
    <Button
        android:id="@+id/dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_text"
        android:layout_centerHorizontal="true"
        android:text="Close"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/change_button"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.501"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/change_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:layout_alignBaseline="@+id/dialog_button"
        android:layout_alignBottom="@+id/dialog_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="27dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.498"
        android:layout_marginRight="27dp"
        app:layout_constraintRight_toRightOf="@+id/dialog_text" />

    <EditText
        android:id="@+id/text_change_chairID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="New ChangeID"
        app:layout_constraintLeft_toLeftOf="@+id/dialog_text"
        app:layout_constraintRight_toRightOf="@+id/dialog_text"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/change_button"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_text" />

</android.support.constraint.ConstraintLayout>